<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingBottom="0dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@drawable/image_one_background"
    android:transitionName="background_image_transition"
    tools:context=".FirstDestination">

    <TextView
        android:id="@+id/fd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/open_sans_extra_bold"
        android:text="London: The UK's All-in-One Destination"
        android:textColor="@color/title"
        android:textSize="24sp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fd_desc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="18dp"
        app:layout_goneMarginEnd="18dp"
        android:fontFamily="@font/open_sans_semi_bold"
        android:text="The nation's sprawling capital boasts plenty of attractions to keep you busy and beautiful resorts and hotels to make you comfortable.."
        android:textColor="@color/white"
        android:textSize="15sp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/fd_title"
        app:layout_constraintTop_toBottomOf="@id/fd_title" />

    <RatingBar
        android:id="@+id/fd_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="16dp"
        android:max="5"
        android:numStars="5"
        android:progressTint="@color/ratingStar"
        android:rating="4.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fd_desc" />

    <TextView
        android:id="@+id/fd_ratingno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="30dp"
        android:elevation="60dp"
        android:fontFamily="@font/open_sans_bold"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="4.7"
        android:textColor="@color/title"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/fd_rating"
        app:layout_constraintTop_toBottomOf="@id/fd_desc" />

    <TextView
        android:id="@+id/fd_rating_voteno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:elevation="60dp"
        android:fontFamily="@font/open_sans_regular"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="(300)"
        android:textColor="@color/title"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/fd_ratingno"
        app:layout_constraintTop_toBottomOf="@+id/fd_desc" />

    <ImageView
        android:id="@+id/fd_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="196dp"
        android:layout_marginRight="196dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_rating"
        android:src="@drawable/ic_up_arrow"/>

    <TextView
        android:id="@+id/fd_more_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/open_sans_light"
        android:text="More Details"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fd_arrow_up"
        app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>